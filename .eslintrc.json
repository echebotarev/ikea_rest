{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["airbnb"],
  "plugins": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "padded-blocks": ["off"],
    "brace-style": ["error", "stroustrup"],
    "operator-linebreak": ["error", "after"],
    "comma-dangle": ["error", "never"],
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true}]
  }
}
